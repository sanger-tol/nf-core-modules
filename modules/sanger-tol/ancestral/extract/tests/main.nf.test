
nextflow_process {

    name "Test Process ANCESTRAL_EXTRACT"
    script "../main.nf"
    process "ANCESTRAL_EXTRACT"

    tag "modules"
    tag "modules_sangertol"
    tag "ancestral"
    tag "ancestral/extract"

    config './nextflow.config'

    test("Undibacterium unclassified - bam") {

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/analysis/hic_mapping/baUndUnlc1_hic_phased_hap2_merged.bam', checkIfExists: true)
                    ]
                )

                input[1] = Channel.og(
                    [
                        file(params.modules_testdata_base_path, checkIfExists: true)
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Undibacterium unclassified - bam - stub") {

        options "-stub"

        when {

            params {
                samtools_view_args = "-u"
                sort_args          = "-k4"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'Undibacterium_unclassified/analysis/hic_mapping/baUndUnlc1_hic_phased_hap2_merged.bam', checkIfExists: true)
                    ]
                )

                input[1] = Channel.og(
                    [
                        file(params.modules_testdata_base_path, checkIfExists: true)
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
