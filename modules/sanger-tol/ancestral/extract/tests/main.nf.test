
nextflow_process {

    name "Test Process ANCESTRAL_EXTRACT"
    script "../main.nf"
    process "ANCESTRAL_EXTRACT"

    tag "modules"
    tag "modules_sangertol"
    tag "ancestral"
    tag "ancestral/extract"

    config './nextflow.config'

    test("GCA_963859965.1 - tsv") {

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test-full-tabl' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/GCA_963859965.1_busco_full_table.tsv', checkIfExists: true)
                    ]
                )

                input[1] = Channel.of(
                    file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/Merian_elements_full_table.tsv', checkIfExists: true)
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("GCA_963859965.1 - tsv- stub") {

        options "-stub"

        when {

            params {
                samtools_view_args = "-u"
                sort_args          = "-k4"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test-full-tabl' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/GCA_963859965.1_busco_full_table.tsv', checkIfExists: true)
                    ]
                )

                input[1] = Channel.of(
                    file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/Merian_elements_full_table.tsv', checkIfExists: true)
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
