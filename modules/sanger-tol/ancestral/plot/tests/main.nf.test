
nextflow_process {

    name "Test Process ANCESTRAL_PLOT"
    script "../main.nf"
    process "ANCESTRAL_PLOT"

    tag "modules"
    tag "modules_sangertol"
    tag "ancestral"
    tag "ancestral/plot"

    config './nextflow.config'

    test("GCA_963859965.1 - tsv - fai") {

        when {
            params {
                outdir  = "$outputDir"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/buscopainter_complete_location.tsv', checkIfExists: true)
                    ]
                )

                input[1] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/GCA_963859965.1.fasta.fai', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            def stable_name_files = getAllFilesFromDir(
                params.outdir,
                includeDir: true,
                relative: true,
                include: [
                    // Meta Data changes between runs
                    "*.pdf",
                    "*.png"
                ]
            )

            assertAll(
                { assert process.success },
                { assert snapshot(
                    stable_name_files,
                    process.out.versions
                ).match() }
            )
        }

    }

