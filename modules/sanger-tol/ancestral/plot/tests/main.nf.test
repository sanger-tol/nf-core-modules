
nextflow_process {

    name "Test Process ANCESTRAL_PLOT"
    script "../main.nf"
    process "ANCESTRAL_PLOT"

    tag "modules"
    tag "modules_sangertol"
    tag "ancestral"
    tag "ancestral/plot"

    config './nextflow.config'

    test("GCA_963859965.1 - tsv - fai") {

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/buscopainter_complete_location.tsv', checkIfExists: true)
                    ]
                )

                input[1] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/GCA_963859965.1.fasta.fai', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("GCA_963859965.1 - tsv - fai - stub") {

        options "-stub"

        when {

            params {
                samtools_view_args = "-u"
                sort_args          = "-k4"
            }

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/buscopainter_complete_location.tsv', checkIfExists: true)
                    ]
                )

                input[1] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/genomenote/ancestral_data/GCA_963859965.1.fasta.fai', checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
