nextflow_process {

    name "Test Process BEDCHUNKS_CREATE"
    script "../main.nf"
    process "BEDCHUNKS_CREATE"

    tag "modules"
    tag "modules_sangertol"
    tag "bedchunks"
    tag "bedchunks/create"

    test("homo sapiens - fai") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.nfcore_modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta.fai', checkIfExists: true),
                ]
                input[1] = 100
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("homo sapiens - fai - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.nfcore_modules_testdata_base_path + 'genomics/homo_sapiens/genome/genome.fasta.fai', checkIfExists: true),
                ]
                input[1] = 100
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

}
