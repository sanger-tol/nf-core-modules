nextflow_process {

    name "Test Process BLOBTK_PLOT"
    script "../main.nf"
    process "BLOBTK_PLOT"

    tag "modules"
    tag "modules_sangertol"
    tag "blobtk"
    tag "blobtk/plot"
    tag "nf-core/gunzip/gunzip"

    setup {
        nfcoreInitialise("${launchDir}/library/")
        nfcoreInstall("${launchDir}/library/", ["gunzip"])
        nfcoreLink("${launchDir}/library/", "${baseDir}/modules/")

        run("GUNZIP") {
            script "../../../../nf-core/gunzip/main.nf"
            process {
                """
                input[0] = Channel.of([
                    [ id: "test" ],
                    file(params.modules_testdata_base_path + 'Ceramica_pisi/assembly/release/ilCerPisi1.1/insdc/GCA_963859965.1.fasta.gz', checkIfExists: true)
                ])
                """
            }
        }
    }

    config './nextflow.config'

    test("Ceramica pisi - fasta") {

        when {

            process {
                """
                input[0] = GUNZIP.out.gunzip

                input[1] = []

                input[2] = "https://blobtoolkit.genomehubs.org/api/v1/dataset/id/CALUEP01"

                input[3] = [
                    [
                        name: "BLOB_VIEW",
                        args: "-v blob"
                    ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Ceramica pisi - fasta - stub") {

        options "-stub"

        when {

            process {
                """
                input[0] = GUNZIP.out.gunzip

                input[1] = []

                input[2] = "https://blobtoolkit.genomehubs.org/api/v1/dataset/id/CALUEP01"

                input[3] = [
                    [
                        name: "BLOB_VIEW",
                        args: "-v blob"
                    ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
