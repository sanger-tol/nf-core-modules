nextflow_process {

    name "Test Process CONTACTBED"
    script "../main.nf"
    process "CONTACTBED"

    tag "modules"
    tag "modules_sangertol"
    tag "contactbed"

    config './nextflow.config'

    test("Undibacterium unclassified - bed") {

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://tolit.cog.sanger.ac.uk/test-data/Allolobophora_molleri/analysis/sorted.bed', checkIfExists: false)
                    ]
                )
                """
            }
        }

        then {
            def out = process.out
            assertAll(
                { assert process.success },
                { assert out.bed.size() == 1 },
                { assert file(out.bed[0][1]).exists() },
                { assert out.versions.size() == 1 }
            )
        }

    }

    test("Undibacterium unclassified - bed - stub") {

        options "-stub"

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://tolit.cog.sanger.ac.uk/test-data/Allolobophora_molleri/analysis/sorted.bed', checkIfExists: false)
                    ]
                )
                """
            }
        }

        then {
            def out = process.out
            assertAll(
                { assert process.success },
                { assert out.bed.size() == 1 },
                { assert file(out.bed[0][1]).exists() },
                { assert out.versions.size() == 1 }
            )
        }

    }

}

