nextflow_process {

    name "Test Process CRAMALIGN_GENCRAMCHUNKS"
    script "../main.nf"
    process "CRAMALIGN_GENCRAMCHUNKS"

    tag "modules"
    tag "modules_sangertol"
    tag "cramalign"
    tag "cramalign/gencramchunks"

    test("cram") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/hic-arima2/41741_2%237.sub.cram.crai', checkIfExists: true)
                ]
                input[1] = 10
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
