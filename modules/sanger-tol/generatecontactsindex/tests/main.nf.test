nextflow_process {

    name "Test Process GENERATE_CONTACTS_INDEX"
    script "../main.nf"
    process "GENERATE_CONTACTS_INDEX"

    tag "modules"
    tag "modules_sangertol"
    tag "generatecontactsindex"

    config './nextflow.config'

    test("Undibacterium unclassified - contacts bed") {

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://tolit.cog.sanger.ac.uk/test-data/Allolobophora_molleri/analysis/sorted.bed', checkIfExists: false)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Undibacterium unclassified - contacts bed - stub") {

        options "-stub"

        when {

            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file('https://tolit.cog.sanger.ac.uk/test-data/Allolobophora_molleri/analysis/sorted.bed', checkIfExists: false)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
