nextflow_process {

    name "Test Process HICCRAMALIGN_CHUNKS"
    script "../main.nf"
    process "HICCRAMALIGN_CHUNKS"

    tag "modules"
    tag "modules_sangertol"
    tag "hiccramalign"
    tag "hiccramalign/chunks"

    test("cram") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.test_data_base + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/hic-arima2/41741_2%237.sub.cram', checkIfExists: true),
                    file(params.test_data_base + 'Undibacterium_unclassified/genomic_data/baUndUnlc1/hic-arima2/41741_2%237.sub.cram.crai', checkIfExists: true)
                ]
                input[1] = 10
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
