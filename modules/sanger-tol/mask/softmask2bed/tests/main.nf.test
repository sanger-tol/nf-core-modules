nextflow_process {

    name "Test Process MASK_SOFTMASK2BED"
    script "../main.nf"
    process "MASK_SOFTMASK2BED"

    tag "modules"
    tag "modules_sangertol"
    tag "mask"
    tag "mask/softmask2bed"

    test("soft-masked") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Meles_meles/assembly/release/mMelMel3.1_paternal_haplotype/GCA_922984935.2.subset.fasta', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
                // Explicit check: the module returns a non-empty output on soft-masked inputs.
                // Keep it to signify the intent of the module, even though it is somewhat
                // redundant with the file's checksum already checked in the snapshot.
                { assert file(process.out.bed[0][1]).size() > 0 },
            )
        }

    }

    test("soft-masked gzipped") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Laetiporus_sulphureus/assembly/release/gfLaeSulp1.1/insdc/GCA_927399515.1.fasta.gz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
                // Explicit check: the module returns a non-empty output on soft-masked inputs.
                // Keep it to signify the intent of the module, even though it is somewhat
                // redundant with the file's checksum already checked in the snapshot.
                { assert file(process.out.bed[0][1]).size() > 0 },
            )
        }

    }

    test("hard-masked") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Acropora_cervicornis/genomic_data/m84093_241116_151316_s2.hifi_reads.bc2028.subset.fasta', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot([
                    // Cannot test all of process.out the regular way because the output bed file
                    // is (rightly) empty and the linter refuses MD5 checksums of empty files.
                    bed: process.out.bed.collect { [it[0], file(it[1]).name] },
                    versions_seqtk: process.out.versions_seqtk,
                    versions_softmask2bed: process.out.versions_softmask2bed,
                ]).match() },
                { assert file(process.out.bed[0][1]).size() == 0 },
            )
        }

    }

    test("hard-masked gzipped") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Cantharis_rufa/assembly/GCA_947369205.1_OX376310.1.fasta.gz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot([
                    // Cannot test all of process.out the regular way because the output bed file
                    // is (rightly) empty and the linter refuses MD5 checksums of empty files.
                    bed: process.out.bed.collect { [it[0], file(it[1]).name] },
                    versions_seqtk: process.out.versions_seqtk,
                    versions_softmask2bed: process.out.versions_softmask2bed,
                ]).match() },
                { assert file(process.out.bed[0][1]).size() == 0 },
            )
        }

    }

    test("fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Meles_meles/assembly/release/mMelMel3.1_paternal_haplotype/GCA_922984935.2.subset.fasta', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

}
