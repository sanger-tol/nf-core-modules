nextflow_process {

    name "Test Process MASK_UNMASK"
    script "../main.nf"
    process "MASK_UNMASK"

    tag "modules"
    tag "modules_sangertol"
    tag "mask"
    tag "mask/unmask"

    test("soft-masked") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.nfcore_modules_testdata_base_path + 'genomics/homo_sapiens/scramble/test.fa', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("soft-masked gzipped") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Laetiporus_sulphureus/assembly/release/gfLaeSulp1.1/insdc/GCA_927399515.1.fasta.gz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
            )
        }

    }

    // This Fasta sequence is all upper case, but its title is lower case !
    // That's obviously a trap. The unmask process should not change anything.
    test("hard-masked") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.nfcore_modules_testdata_base_path + 'genomics/homo_sapiens/genome/minigenome.fa', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("hard-masked gzipped") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.modules_testdata_base_path + 'Cantharis_rufa/assembly/GCA_947369205.1_OX376310.1.fasta.gz', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() },
            )
        }

    }

    test("unmask - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.nfcore_modules_testdata_base_path + 'genomics/homo_sapiens/genome/minigenome.fa', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(process.out).match() }
            )
        }

    }

}
