nextflow_process {

    name "Test Process TELOMERE_WINDOWS"
    script "../main.nf"
    process "TELOMERE_WINDOWS"

    tag "modules"
    tag "modules_sangertol"
    tag "telomere"
    tag "windows"
    tag "telomere/windows"

    config "./nextflow.config"

    test("Cloeon_dipterum - telomere") {

        when {
            process {
                """
                input[0] = [
                    [ id: "Cloeon_dipterum" ],
                    file(params.modules_testdata_base_path + 'resources/modules/telomere/idFanCani4/idFanCani4.telomere', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success               },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("Cloeon_dipterum - telomere - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: "Cloeon_dipterum" ],
                    file(params.modules_testdata_base_path + 'resources/modules/telomere/idFanCani4/idFanCani4.telomere', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success               },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
