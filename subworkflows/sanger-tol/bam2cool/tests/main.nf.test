// nf-core subworkflow test for BAM2COOL
nextflow_workflow {

    name "Test Subworkflow BAM2COOL"
    script "../main.nf"          // path to your workflow script
    workflow "BAM2COOL"          // must match workflow name in main.nf
    config "./nextflow.config"

    tag "subworkflows"
    tag "subworkflows_sangertol"
    tag "subworkflows/bam2cool"
    tag "bedtools/bamtobedsort"
    tag "contactbed"
    tag "generatecontactsindex"
    tag "subworkflows/../../modules/nf-core/cooler/cload"
    tag "subworkflows/../../modules/nf-core/cooler/merge"
    tag "subworkflows/../../modules/nf-core/cooler/zoomify"

    setup {
        nfcoreInitialise("${launchDir}/library/")
        nfcoreInstall(
            "${launchDir}/library/",
            [
                "samtools/faidx",
                "cooler/cload",
                "cooler/merge",
                "cooler/zoomify"
            ]
        )
        nfcoreLink("${launchDir}/library/", "${baseDir}/modules/")

        run("SAMTOOLS_FAIDX"){
            script "../../../../modules/nf-core/samtools/faidx/main.nf"
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file('https://tolit.cog.sanger.ac.uk/test-data/Undibacterium_unclassified/assembly/draft/baUndUnlc1.hic.hap1.p_ctg.fa.gz', checkIfExists: true)
                    ]
                )
                input[1] = [[], []]
                input[2] = true
                """
            }
        }
    }

    test("bam - paired_end stub") {

        when {
            params {
                cooler_cload_args = '-0 -c1 3 -p1 4 -c2 7 -p2 8'
            }
            workflow {
                """
                // Inputs to BAM2COOL workflow
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file('https://tolit.cog.sanger.ac.uk/test-data/Undibacterium_unclassified/analysis/hic_mapping/41741_2.7.sub.cram.baUndUnlc1_hic_phased_hap1.2.bam', checkIfExists: true)
                    ],
                    [
                        [ id:'test' ],
                        file('https://tolit.cog.sanger.ac.uk/test-data/Undibacterium_unclassified/analysis/hic_mapping/41741_2.7.sub.cram.baUndUnlc1_hic_phased_hap1.3.bam', checkIfExists: true)
                    ]
                )
                input[1] = SAMTOOLS_FAIDX.out.sizes 
                input[2] = 1000
                """
            }
        }

        then {
            // Stub-safe assertions: workflow runs without error
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }

        cleanup {
            nfcoreUnlink("${launchDir}/library/", "${baseDir}/modules/nf-core")
        }
    }
}
