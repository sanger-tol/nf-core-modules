// nf-core subworkflow test for BAM2COOL
nextflow_workflow {

    name "Test Subworkflow BAM2COOL"
    script "../main.nf"          // path to your workflow script
    workflow "BAM2COOL"          // must match workflow name in main.nf

    tag "subworkflows"
    tag "subworkflows_sangertol"
    tag "subworkflows/bam2cool"
    tag "samtools"
    tag "cooler"

    setup {
        // Initialize module library
        nfcoreInitialise("${launchDir}/library/")

        // Install required modules
        nfcoreInstall(
            "${launchDir}/library/",
            [
                "samtools/markdup",
                "samtools/faidx",
                "cooler/cload",
                "cooler/merge",
                "cooler/zoomify"
            ]
        )

        // Link modules for workflow
        nfcoreLink("${launchDir}/library/", "${baseDir}/modules/")
    }

    test("sarscov2 - bam - paired_end stub") {

        options "-stub"   // stub mode: modules replaced with placeholders

        when {
            params {
                cooler_cload_args = 'pairs -0 -c1 3 -p1 4 -c2 7 -p2 8'
            }
            workflow {
                """
                // Inputs to BAM2COOL workflow
                input[0] = [
                    [ id:'test', single_end:false ],
                    file('https://tolit.cog.sanger.ac.uk/test-data/Undibacterium_unclassified/analysis/hic_mapping/baUndUnlc1_hic_phased_hap2_merged.bam', checkIfExists: false)
                ]
                input[1] = Channel.of([
                    [ id:'genome' ],
                    file('https://tolit.cog.sanger.ac.uk/test-data/Undibacterium_unclassified/assembly/draft/baUndUnlc1.hic.hap2.p_ctg.genome', checkIfExists: false)
                ])
                input[2] = 1000
                """
            }
        }

        then {
            // Stub-safe assertions: workflow runs without error
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }

        cleanup {
            nfcoreUnlink("${launchDir}/library/", "${baseDir}/modules/nf-core")
        }
    }
}
