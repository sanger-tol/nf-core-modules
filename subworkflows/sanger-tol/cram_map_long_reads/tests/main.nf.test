                input[2] = 5
                input[3] = Channel.of(
                    [
                        [ id:'test' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/modules/pacbio_preprocess/HiFi_adapter.yaml', checkIfExists: true)
                    ],
                    [
                        [ id:'test1' ], // meta map
                        file(params.modules_testdata_base_path + 'resources/modules/pacbio_preprocess/HiFi_adapter.yaml', checkIfExists: true)
                    ]
                )
                input[4] = Channel.of(
                    [
                        [id:'blast_db'], // meta map
